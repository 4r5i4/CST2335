<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:text="@string/a_text_front"
            android:layout_width="113dp"
            android:layout_height="96dp"
            android:id="@+id/a_temp_text_front"
            android:textSize="40sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="50sp"
            android:layout_weight="1" />

        <TextView
            android:text=""
            android:layout_height="110dp"
            android:id="@+id/a_temp_text_frontvalue"
            android:textSize="100sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="50sp"
            android:layout_weight="63.02"
            android:layout_width="90dp" />

        <TextView
            android:text="°C  "
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:textSize="60sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="50sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:text="@string/a_text_back"
            android:layout_width="113dp"
            android:layout_height="96dp"
            android:id="@+id/a_temp_text_back"
            android:textSize="40sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="50sp"
            android:layout_weight="1" />

        <TextView
            android:text=""
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:id="@+id/a_temp_text_backvalue"
            android:textSize="100sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="50sp"
            android:layout_weight="42.04" />

        <TextView
            android:text="°C  "
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:textSize="60sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="50sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <Button
            android:text="Front"
            android:layout_width="100dp"
            android:layout_height="79dp"
            android:id="@+id/a_temp_btn_front"
            android:layout_weight="0.26" />

        <Button
            android:text="Back"
            android:layout_width="100dp"
            android:layout_height="79dp"
            android:id="@+id/a_temp_btn_back"
            android:layout_weight="0.24" />
    </LinearLayout>


</LinearLayout>